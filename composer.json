{
    "description": "Simple API client for fetching user data with caching",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.6",
        "friendsofphp/php-cs-fixer": "^3.89",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --testdox",
        "post-install-cmd": "@test",
        "post-update-cmd": "@test",
        "qa": [
            "@test",
            "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff --stop-on-violation --no-interaction",
            "rector process --dry-run --no-progress-bar"
        ]
    }
}
